
<MyGrid>:
    
    name: name1
    email: email1

    GridLayout:
        
        cols:1
        size: root.width, root.height

        GridLayout:
            
            cols:2

            Label:
                text: "Name: "

            TextInput:
                id: name1 
                multinline:False

            Label:
                text: "Email: "

            TextInput:
                id: email1
                multiline:False

        Button:
            background_color: 1,0,0,1
            text:"Submit"
            on_press: root.btn()


        Label:
            background_color: 1,1,0,1
            text: root.my_text